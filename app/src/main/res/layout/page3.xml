            android:text="臺北市大安區羅斯福路四段1號"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月租4000NT$"
            android:textSize="20sp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btrent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="租車" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="師範大學"
        android:textSize="20sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="臺北市大安區和平東路一段162號"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月租5000NT$"
            android:textSize="20sp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btrent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="租車" />
</LinearLayout>